<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Classes"
    android:padding="10dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <ImageView
        android:id="@+id/image"
        android:layout_width="317dp"
        android:layout_height="189dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/classpic" />
    <TextView
        android:id="@+id/classes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classes"
        android:layout_marginTop="220dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#121213"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/zero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_buuton"
        android:padding="5dp"
        android:text="Class kg-5"
        android:textColor="#332"
        android:textSize="20sp" />
    <Button
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_buuton"
        android:padding="5dp"
        android:text="kg-5"
        android:textColor="#332"
        android:textSize="20sp"/>
    <Button
    android:id="@+id/two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="380dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/custom_buuton"
    android:padding="5dp"
    android:text=" 6-8"
    android:textColor="#332"
    android:textSize="20sp" />
    <Button
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="440dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_buuton"
        android:padding="5dp"
        android:text="Matric"
        android:textColor="#332"
        android:textSize="20sp" />
    <Button
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_buuton"
        android:padding="5dp"
        android:text="IntermediATE"
        android:textColor="#332"
        android:textSize="20sp" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:textSize="20sp"
        android:text="FSC(Pre-Engineering)"
        android:id="@+id/FSC"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="70dp"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="585dp"
        android:textSize="20sp"
        android:text="FSC(Pre-Medical)"
        android:id="@+id/med"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="70dp"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="619dp"
        android:textSize="20sp"
        android:text="ICS"
        android:id="@+id/ics"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="75dp"
        />
       <CheckBox
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="650dp"
           android:textSize="20sp"
           android:text="D.COM"
           android:id="@+id/dcom"
           android:layout_marginRight="100dp"
           android:layout_marginLeft="75dp"
           />
       <CheckBox
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="679dp"
           android:textSize="20sp"
           android:text="I.COM"
           android:id="@+id/ICOM"
           android:layout_marginRight="100dp"
           android:layout_marginLeft="75dp"
           />
       <Button
        android:id="@+id/five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="710dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_buuton"
        android:padding="10dp"
        android:text="BS"
        android:textColor="#332"
        android:textSize="20sp"/>
   </RelativeLayout>
</ScrollView>
