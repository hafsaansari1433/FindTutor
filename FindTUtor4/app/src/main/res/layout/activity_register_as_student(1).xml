<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="Register_as_student"
    android:orientation="vertical"
    android:background="#7385"
    style="@style/TextAppearance.AppCompat">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="326dp"
            android:layout_height="143dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/onepageimg"
            android:layout_marginTop="10dp"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Name"
        android:id="@+id/studname1"
        android:layout_marginTop="170dp"
        android:textSize="20sp"
        android:textColor="#121213"
        android:layout_marginRight="190dp"
        android:layout_marginLeft="35dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:id="@+id/studname2"
        android:background="#c0cfff"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#121213"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Father Name"
        android:id="@+id/Fstudname1"
        android:layout_marginTop="252dp"
        android:textSize="20sp"
        android:textColor="#121213"
        android:layout_marginRight="190dp"
        android:layout_marginLeft="35dp"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:id="@+id/Fstudname2"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:layout_centerHorizontal="true"
        android:background="#c0cfff"
        android:padding="10dp"
        android:textColor="#121213"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Email"
            android:id="@+id/Email3"
            android:layout_marginTop="340dp"
            android:textSize="20sp"
            android:textColor="#121213"
            android:layout_marginRight="190dp"
            android:layout_marginLeft="35dp"
            />
        <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="371dp"
            android:id="@+id/NO_Email"
            android:layout_centerHorizontal="true"
            android:background="#c0cfff"
            android:padding="10dp"
            android:textColor="#121213"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Phone No"
            android:id="@+id/phoneno9"
            android:layout_marginTop="426dp"
            android:textSize="20sp"
            android:textColor="#121213"
            android:layout_marginRight="190dp"
            android:layout_marginLeft="35dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Phone10"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="455dp"
            android:background="#c0cfff"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#121213"
            android:textSize="20sp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Address"
            android:id="@+id/Add1"
            android:layout_marginTop="509dp"
            android:textSize="20sp"
            android:textColor="#121213"
            android:layout_marginRight="190dp"
            android:layout_marginLeft="35dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="538dp"
            android:background="#c0cfff"
            android:inputType="phone"
            android:id="@+id/add9"
            android:padding="10dp"
            android:textColor="#121213"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Now select Class"
        android:id="@+id/sel"
        android:layout_marginTop="594dp"
        android:textSize="15sp"
        android:background="@drawable/button_default"
        android:layout_marginRight="50dp"
        android:padding="10dp"
            android:paddingBottom="50dp"
            android:layout_marginLeft="50dp"/>
   </RelativeLayout>
</ScrollView>