<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Classes">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="317dp"
            android:layout_height="189dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/classpic" />

        <TextView
            android:id="@+id/classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="5dp"
            android:text="Classes"
            android:textAlignment="center"
            android:textColor="#121213"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="265dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/custom_buuton"
            android:padding="5dp"
            android:text="kg-5"
            android:textColor="#332"
            android:textSize="20sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="325dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/custom_buuton"
            android:padding="5dp"
            android:text=" 6-8"
            android:textColor="#332"
            android:textSize="20sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="385dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/custom_buuton"
            android:padding="5dp"
            android:text="Matric"
            android:textColor="#332"
            android:textSize="20sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="443dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/custom_buuton"
            android:padding="5dp"
            android:text="IntermediATE"
            android:textColor="#332"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/FSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="0dp"
            android:text="FSC(Pre-Engineering)"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/med"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="535dp"
            android:layout_marginRight="0dp"
            android:text="FSC(Pre-Medical)"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="569dp"
            android:layout_marginRight="100dp"
            android:text="ICS"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/dcom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="596dp"
            android:layout_marginRight="100dp"
            android:text="D.COM"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/ICOM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="625dp"
            android:layout_marginRight="100dp"
            android:text="I.COM"
            android:textSize="20sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="660dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/custom_buuton"
            android:padding="10dp"
            android:text="BS"
            android:textColor="#332"
            android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>
